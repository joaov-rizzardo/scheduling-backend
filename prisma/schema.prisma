generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(uuid())
  name              String
  last_name         String
  email             String
  role              UserRole
  is_email_verified Boolean  @default(false)
  phone             String?
  password          String
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt

  @@index([email])
}

enum UserRole {
  user
  admin
}
